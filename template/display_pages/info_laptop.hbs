<div class="info info_laptop">
    <div class="btn_out">
        {{#if shopid}}
            <a href="/shopinfo?shopid={{shopid}}&page={{page}}&limit=6" class="btn_close">X</a>
        {{else}}
            {{#if in_sort}}
                <a href="/laptopcomponent?page={{in_sort}}&limit=6" class="btn_close">X</a>
            {{else}}
                {{#if in_search}}
                    <a href="/searchlaptop?page={{in_search}}&limit=6" class="btn_close">X</a>
                {{else}}
                    <a href="/laptop?page={{page}}&limit=6" class="btn_close">X</a>
                {{/if}}
            {{/if}}
        {{/if}}
    </div>

    <div class="info_block">
        <div class="info_img">
            <img src="{{laptop.laptop_img}}" alt="Error" class="img">
        </div>

        <div class="info_content">
            <div class="info_content_header">
                <span class="title">Laptop</span>
            </div>

            <div class="info_content_main">
                <div class="content_block content_main_left">
                    <div class="content">
                        <div class="content_label">Name:&nbsp;&nbsp;</div>
                        <div class="content_data">{{laptop.laptop_name}}</div>
                    </div>

                    <div class="content">
                        <div class="content_label">Storage:&nbsp;&nbsp;</div>
                        <div class="content_data">{{laptop.storage}}</div>
                    </div>

                    <div class="content">
                        <div class="content_label">Ram:&nbsp;&nbsp;</div>
                        <div class="content_data">{{laptop.ram}}</div>
                    </div>

                    <div class="content">
                        <div class="content_label">CPU:&nbsp;&nbsp;</div>
                        <div class="content_data">{{laptop.cpu}}</div>
                    </div>

                    <div class="content">
                        <div class="content_label">GPU:&nbsp;&nbsp;</div>
                        <div class="content_data">{{laptop.gpu}}</div>
                    </div>
                </div>

                <div class="content_block_line"></div>

                <div class="content_block content_main_right">
                    <div class="content">
                        <div class="content_label">Screen_size:&nbsp;&nbsp;</div>
                        <div class="content_data">{{laptop.screen_size}}&nbsp;inch</div>
                    </div>

                    <div class="content">
                        <div class="content_label">Screen_type:&nbsp;&nbsp;</div>
                        <div class="content_data">{{laptop.screen_type}}</div>
                    </div>

                    <div class="content">
                        <div class="content_label">Battery:&nbsp;&nbsp;</div>
                        <div class="content_data">{{laptop.battery}}Wh</div>
                    </div>
                </div>
            </div>

            <div class="info_content_footer">
                <div class="content">
                    <div class="content_label">Price:&nbsp;&nbsp;</div>
                    <div class="content_data">{{laptop.price}}&nbsp;vnÄ‘</div>
                </div>

                <div class="content">
                    <div class="content_label">Shop:&nbsp;&nbsp;</div>
                    <div class="content_data">{{laptop.shop.shop_name}}</div>
                </div>
            </div>
        </div>
    </div>

    <div class="update_block">
        {{#if user}}
            {{#if_us user.role 'admin'}}
            <a href="/updatelaptop?laptopid={{laptop.id}}" class="update_btn">
                <button class="mybtn">Update</button>
            </a>
            <a href="/deletelaptop?laptopid={{laptop.id}}" class="delete_btn">
                <button class="mybtn">Delete</button>
            </a>
            {{/if_us}}
            {{#if_eq user.shop.id shop.id}}
            <a href="/updatelaptop?laptopid={{laptop.id}}" class="update_btn">
                <button class="mybtn">Update</button>
            </a>
            <a href="/deletelaptop?laptopid={{laptop.id}}" class="delete_btn">
                <button class="mybtn">Delete</button>
            </a>
            {{/if_eq}}
        {{/if}}
    </div>

</div>